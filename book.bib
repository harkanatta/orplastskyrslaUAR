keywords = {Analysis of degradation,Attenuated total reflectance-Fourier transform inf,Biodegradation,Rubber degrading enzymes,Scanning electron microscopy,Sturm test},
pages = {145--157},
publisher = {Elsevier Ltd},
title = {{Biodegradation of natural and synthetic rubbers: A review}},
url = {http://dx.doi.org/10.1016/j.ibiod.2013.05.004},
