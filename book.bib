isbn = {0048-9697},
issn = {00489697},
journal = {Science of the Total Environment},
keywords = {Atmospheric mineral dust,Dust suppressant,Effectiveness,Heavy metals,Street cleaning,Sweeping,Washing},
number = {16},
pages = {3070--3084},
pmid = {20488509},
publisher = {Elsevier B.V.},
title = {{A review on the effectiveness of street sweeping, washing and dust suppressants as urban PM control methods}},
