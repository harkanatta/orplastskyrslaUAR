publisher = {Elsevier Ltd},
title = {{Boring crustaceans damage polystyrene floats under docks polluting marine waters with microplastic}},
url = {http://dx.doi.org/10.1016/j.marpolbul.2012.06.005},
volume = {64},
year = {2012}
